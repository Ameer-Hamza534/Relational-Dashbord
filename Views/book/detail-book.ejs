<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="../css/book-style.css">
<link rel="stylesheet" href="../css/main.css">
</head>
<body>
    <%- include('../includes/navigation.ejs')%>
    <div class="fluid-container d-flex">
        <%- include('../includes/side-bar.ejs')%>
        <div class="col-md-9 d-flex" style="height: fit-content;">
            <div class="card w-100">
                <div class="card-body">
                    <div class="row text-align-center">
                        <div class="col-md-6 mb-3">
                            <h3 class="card-title fs-3"><%= book.title%>: <%= book.author%></h3>
                        </div>
                        <div class="col-md-6 mb-3 d-flex justify-content-end">
                            <a href="/edit-book/<%= book.id%>?edit=true" class="btn rounded-pill me-2">Edit Book</a>
                            <a href="/books" class="btn rounded-pill">Back</a>
                        </div>
                    </div>
                    <main>
                        <ul class="table-striped">
                            <div class="row">
                                <div class="col-md-6 fw-bold  rounded border p-2 pt-3 my-1"><h5 style="color: #306cc5;">Title</h5></div>
                                <div class="col-md-6 rounded border p-2 pt-3 my-1" id="title"><h6><%= book.title%></h6></div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 fw-bold  rounded border p-2 pt-3 my-1"><h5 style="color: #306cc5;">Author</h5></div>
                                    <div class="col-md-6 rounded border p-2 pt-3 my-1"><h6><%= book.Author.name%></h6></div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 fw-bold  rounded border p-2 pt-3 my-1"><h5 style="color: #306cc5;">Description</h5></div>
                                    <div class="col-md-6 rounded border p-2 pt-3 my-1"><h6><%= book.description%></h6></div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 fw-bold  rounded border p-2 pt-3 my-1"><h5 style="color: #306cc5;">Category</h5></div>
                                    <div class="col-md-6 rounded border p-2 pt-3 my-1"><h6><%= book.category%></h6></div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 fw-bold  rounded border p-2 pt-3 my-1"><h5 style="color: #306cc5;">#ISBN</h5></div>
                                <div class="col-md-6 rounded border p-2 pt-3 my-1"><h6><%= book.isbn%></h6></div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 fw-bold  rounded border p-2 pt-3 my-1"><h5 style="color: #306cc5;">Image</h5></div>
                                <div class="col-md-6 rounded border p-2 pt-3 my-1"><img style="width: 25%;" src="/images/books/<%= book.image%>"></div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 fw-bold  rounded border p-2 pt-3 my-1"><h5 style="color: #306cc5;">Published At</h5></div>
                                <div class="col-md-6 rounded border p-2 pt-3 my-1"><h6><%= book.createdAt.toLocaleDateString() %></h6></div>
                            </div>
                        </ul>
                    </main>
                </div>
            </div>
        </div>
    </div>
    <%- include('../includes/end.ejs')%>